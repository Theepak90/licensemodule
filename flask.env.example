# Flask Configuration
FLASK_ENV=development
FLASK_APP=app.py

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET=your-jwt-secret-here-change-in-production

# Database
DATABASE_URL=sqlite:///license_manager.db
# For PostgreSQL: postgresql://username:password@localhost/license_manager

# Server Configuration
HOST=0.0.0.0
PORT=3010

# Redis (for rate limiting and caching)
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3002,http://localhost:3003,http://localhost:3004,http://localhost:3009

# License Configuration
LICENSE_KEY_PREFIX=TORRO
CLIENT_ID_SUFFIX_LENGTH=9
DEFAULT_EXPIRY_DAYS=30

# Security Features
MILITARY_GRADE_ENABLED=true
HARDWARE_BINDING_ENABLED=true
ANTI_TAMPERING_ENABLED=true
ANTI_DEBUGGING_ENABLED=true
SELF_DESTRUCTION_ENABLED=true
INTEGRITY_CHECKING_ENABLED=true
RISK_SCORING_ENABLED=true
SECURE_DELETION_ENABLED=true
